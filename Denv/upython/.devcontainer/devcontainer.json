// For format details, see https://aka.ms/devcontainer.json. 
// For config options, see the README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"name": "upython",
	
	"image": "ghcr.io/eoeair/cenv:upython",
	"runArgs": ["--device=/dev/ttyACM0", "--group-add=keep-groups"],
	// Configure vscode-extensions.
	"customizations": {
		"vscode": {
		  "extensions": ["ms-pyright.pyright", "davescodemusings.mpremote"]
		}
	  },
	"postCreateCommand": "apk add git openssh-client && pip install micropython-rp2-pico-stubs --break-system-packages && ssh-keyscan github.com >> ~/.ssh/known_hosts"
}