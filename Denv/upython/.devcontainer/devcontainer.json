// For format details, see https://aka.ms/devcontainer.json. 
// For config options, see the README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"name": "upython",
	
	"image": "ghcr.io/eoeair/cenv:upython",
	"runArgs": ["--device=/dev/ttyACM0"],
	// Configure vscode-extensions.
	"customizations": {
		"vscode": {
		  "extensions": ["ms-python.vscode-pylance", "davescodemusings.mpremote", "youkony.serial-xterm"]
		}
	  },
	"postCreateCommand": "apk add git openssh && pip install micropython-rp2-pico-stubs --break-system-packages && ssh-keyscan github.com >> ~/.ssh/known_hosts"
}