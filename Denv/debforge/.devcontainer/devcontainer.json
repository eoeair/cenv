// For format details, see https://aka.ms/devcontainer.json. 
// For config options, see the README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"name": "debforge",
	
	"image": "ghcr.io/eoeair/cenv:debforge",
	"runArgs": ["--network=host", "--privileged", "--pid=host", "--shm-size=8G"],
	// Configure vscode-extensions.
	"customizations": {
		"vscode": {
		  "extensions": ["ms-vscode.cpptools-extension-pack", "codeium.codeium"]
		}
	  },
	"postCreateCommand": "apt-get update && apt-get install -y git devscripts && ssh-keyscan github.com >> ~/.ssh/known_hosts"
}
